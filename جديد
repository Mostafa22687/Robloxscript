------------------------------------------------------
-- 9) Base Transparency (خفاء البيسات)
------------------------------------------------------

local baseTransBtn = createButton("Base Transparency")
baseTransBtn.MouseButton1Click:Connect(function()
	local CoreGui = game:GetService("CoreGui")

	if CoreGui:FindFirstChild("FullBaseTransparencyGUI") then
		local gui = CoreGui.FullBaseTransparencyGUI
		gui.Enabled = not gui.Enabled
		playToggleSound(gui.Enabled)
		return
	end

	-- تشغيل خفاء البيسات
	local Workspace = game:GetService("Workspace")
	local TRANSPARENCY_VALUE = 0.6
	local DISABLE_COLLISION = false
	local KEYWORDS = {"base","platform","pad","floor","ground","plot","stand","bunker"}

	local function nameMatches(name)
		name = tostring(name):lower()
		if string.find(name, "brainrot") then return false end
		for _, w in ipairs(KEYWORDS) do
			if string.find(name, w) then return true end
		end
		return false
	end

	local originalStates = {}
	local function applyTransparencyToContainer(container, enable)
		for _, obj in pairs(container:GetDescendants()) do
			if obj:IsA("BasePart") and nameMatches(obj.Name) then
				if enable then
					if not originalStates[obj] then
						originalStates[obj] = {Transparency = obj.Transparency, CanCollide = obj.CanCollide}
					end
					obj.Transparency = TRANSPARENCY_VALUE
					if DISABLE_COLLISION then obj.CanCollide = false end
				else
					if originalStates[obj] then
						obj.Transparency = originalStates[obj].Transparency
						obj.CanCollide = originalStates[obj].CanCollide
						originalStates[obj] = nil
					end
				end
			end
		end
	end

	local function processAll(enable)
		for _, obj in pairs(Workspace:GetDescendants()) do
			if obj:IsA("Model") then
				for _, p in pairs(obj:GetDescendants()) do
					if p:IsA("BasePart") and nameMatches(p.Name) then
						applyTransparencyToContainer(obj, enable)
						break
					end
				end
			elseif obj:IsA("BasePart") and nameMatches(obj.Name) then
				applyTransparencyToContainer(obj, enable)
			end
		end
	end

	if CoreGui:FindFirstChild("FullBaseTransparencyGUI") then
		CoreGui.FullBaseTransparencyGUI:Destroy()
	end

	local gui = Instance.new("ScreenGui", CoreGui)
	gui.Name = "FullBaseTransparencyGUI"
	gui.ResetOnSpawn = false

	local frame = Instance.new("Frame", gui)
	frame.Size = UDim2.new(0, 220, 0, 90)
	frame.Position = UDim2.new(0.02, 0, 0.8, -50)
	frame.BackgroundColor3 = Color3.fromRGB(20,20,20)
	frame.BackgroundTransparency = 0.2
	frame.BorderSizePixel = 0
	frame.Active = true
	frame.Draggable = true
	Instance.new("UICorner", frame).CornerRadius = UDim.new(0,10)

	local title = Instance.new("TextLabel", frame)
	title.Size = UDim2.new(1, -16, 0, 28)
	title.Position = UDim2.new(0,8,0,6)
	title.BackgroundTransparency = 1
	title.Text = "خفاء البيسات"
	title.TextColor3 = Color3.fromRGB(255,255,255)
	title.Font = Enum.Font.GothamBold
	title.TextSize = 16
	title.TextXAlignment = Enum.TextXAlignment.Left

	local toggleBtn = Instance.new("TextButton", frame)
	toggleBtn.Size = UDim2.new(0.9,0,0,40)
	toggleBtn.Position = UDim2.new(0.05,0,0,38)
	toggleBtn.BackgroundColor3 = Color3.fromRGB(200,40,40)
	toggleBtn.TextColor3 = Color3.fromRGB(255,255,255)
	toggleBtn.Font = Enum.Font.GothamBold
	toggleBtn.Text = "تشغيل الشفافية ❌"
	Instance.new("UICorner", toggleBtn).CornerRadius = UDim.new(0,8)

	local active = false
	toggleBtn.MouseButton1Click:Connect(function()
		active = not active
		if active then
			processAll(true)
			toggleBtn.BackgroundColor3 = Color3.fromRGB(30,200,30)
			toggleBtn.Text = "إيقاف الشفافية ✅"
		else
			processAll(false)
			toggleBtn.BackgroundColor3 = Color3.fromRGB(200,40,40)
			toggleBtn.Text = "تشغيل الشفافية ❌"
		end
	end)
end)
