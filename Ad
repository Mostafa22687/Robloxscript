-- أزرار النافذة
local function createCloudButton(text, yPos)
    local btn = Instance.new("TextButton", cloudGui)
    btn.Size = UDim2.new(0,200,0,40)
    btn.Position = UDim2.new(0.5,-100,0,40 + yPos)
    btn.Text = text
    btn.BackgroundColor3 = Color3.fromRGB(0,0,0)
    btn.TextColor3 = Color3.fromRGB(255,255,255)
    btn.Font = Enum.Font.GothamBold
    btn.TextSize = 14
    Instance.new("UICorner", btn).CornerRadius = UDim.new(0,6)
    local s = Instance.new("UIStroke", btn)
    s.Thickness = 1
    s.Color = Color3.fromRGB(255,0,0)
    return btn
end

local addCloudBtn = createCloudButton("Add Cloud", 0)
local removeCloudBtn = createCloudButton("Remove Clouds", 50)
local singleCloudBtn = createCloudButton("Add Single Cloud", 100)

local cloudsFolder = Workspace:FindFirstChild("AIO_Clouds") or Instance.new("Folder", Workspace)
cloudsFolder.Name = "AIO_Clouds"

addCloudBtn.MouseButton1Click:Connect(function()
    for i = 1, 10 do
        local cloud = Instance.new("Part")
        cloud.Size = Vector3.new(10,1,10)
        cloud.Position = Vector3.new(math.random(-50,50), 50 + i*2, math.random(-50,50))
        cloud.Anchored = true
        cloud.Material = Enum.Material.Neon
        cloud.Color = Color3.fromRGB(200,200,255)
        cloud.Name = "Cloud_"..i
        cloud.Parent = cloudsFolder
    end
end)

singleCloudBtn.MouseButton1Click:Connect(function()
    local cloud = Instance.new("Part")
    cloud.Size = Vector3.new(10,1,10)
    cloud.Position = Vector3.new(math.random(-50,50), 60, math.random(-50,50))
    cloud.Anchored = true
    cloud.Material = Enum.Material.Neon
    cloud.Color = Color3.fromRGB(200,200,255)
    cloud.Name = "Cloud_Single"
    cloud.Parent = cloudsFolder
end)

removeCloudBtn.MouseButton1Click:Connect(function()
    for _, cloud in pairs(cloudsFolder:GetChildren()) do
        pcall(function() cloud:Destroy() end)
    end
end)

-- فتح/إغلاق نافذة Cloud Block عند الضغط على زرها
